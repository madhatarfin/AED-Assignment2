    private void cbListOfCityActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
try
      {
         for(City city:DataSource.getInstance().getCitySet()){
             if(cbListOfCity!=null && city.getName().equals(cbListOfCity.getSelectedItem())){
             cbListOfCommunity.removeAllItems();
            cbListOfCommunity.setSelectedItem(null);
            city.getCommunities().forEach(community->
            {
                cbListOfCommunity.addItem(community.getName());
            });
            break;
             }
          }
       
      }
       catch (Exception e) 
       {
          e.printStackTrace();
       }
    }                                            

    private void cbListOfCommunityActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
      try
   {
       for(City city:DataSource.getInstance().getCitySet()){
       if(city.getName().equals(cbListOfCity.getSelectedItem())){
           for(Community community:city.getCommunities()){
               if (community.getName().equals(cbListOfCommunity.getSelectedItem())){
                  
            cbListOfHospital.removeAllItems();
             cbListOfHospital.setSelectedItem(null);
                   for (Hospital hospital : community.getHospital()) {
                       
             cbListOfHospital.addItem(hospital.getName());    
                   break;
                   }
               }
       }
       }
       }
   }
   catch (Exception e) 
       {
           e.printStackTrace();
       }                                           
           
    }                                                 

    private void cbListOfHospitalActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
    }                                                

    private void btnEnterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        PatientCrudJFrame frame = new PatientCrudJFrame();
        frame.setSize(800, 600);
        frame.setVisible(true);
        frame.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
        frame.setTitle("Patient Panel");
    }                                        

