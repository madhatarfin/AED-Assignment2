    public DoctorPatientBrowseJFrame() {
        initComponents();
        cbListOfCity.setSelectedItem(null);
        DataSource dataSource = DataSource.getInstance();
        Set<City> cities =  dataSource.getCitySet();
        cities.forEach(city->{
            cbListOfCity.addItem(city.getName());
        });
         cbListOfCity.setSelectedItem(null);
        cbListOfCommunity.removeAllItems();
        cbListOfHospital.removeAllItems();
            cbListOfCommunity.setSelectedItem(null);
            cbListOfHospital.setSelectedItem(null);
    }

